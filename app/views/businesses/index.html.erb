    <section class="business_main">

      <%= search_form_for @q do |f| %>
        <%= f.select :continent_id_eq, options_from_collection_for_select(Continent.all.order(:name), :id, :name, @q.continent_id_eq), { }, {class: ''} %>
        <%= f.search_field :name_cont %>
        <div class="">
        <%#= f.check_box :accepts_partnership_true %>
        <%#= f.label :accepts_partnership_true, "Accepts Partnership" %>
      
       
        </div>
        <%= f.submit %>
      <% end %>
      <div class="">
        <p>
          <h1>(<%=@business.count%>) Business Found</h1> 
        </p>
      </div>
        <hr>
          <p id="notice"><%= notice %></p>

          <h1>Businesses</h1>

          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Number of employee</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @business.each do |business| %>
                <tr>
                  <td><%= business.name %></td>
                  <td><%= business.number_of_employee %></td>
                  <td><%= link_to 'Show', business %></td>
                  <td><%= link_to 'Edit', edit_business_path(business) %></td>
                  <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Business', new_business_path %>
    </section>

